{
  "name": "ng-santoral",
  "version": "0.0.0",
  "scripts": {
    "prisma": "prisma",
    "prisma:link": "npx symlink-dir ../prisma ./prisma",
    "prisma:client": "npx prisma generate",
    "static": "npx copyfiles --flat .\\api\\src\\certs\\*.pem .\\api\\lib\\certs",
    "compile": "shx rm -rf lib/ && tsc -p tsconfig.json",
    "compile-with-static": "npm run api:compile && npm run api:static",
    "start": "node lib/",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "dev": "nodemon -x ts-node src/index.ts",
    "prettier": "npx prettier \"**/*.ts\" --write",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "cross-env NODE_ENV=test npm run migrate && npm run mocha",
    "bundle:client": "npm run compile && npm pack --pack-destination ./public",
    "docker": "docker build -f Dockerfile_api . -t eastolfi/santoral-api",
    "api:release": "git reset"
  },
  "private": true,
  "feathers": {
    "language": "ts",
    "packager": "npm",
    "database": "mysql",
    "framework": "koa",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": "typebox"
  },
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/common": "^16.1.0",
    "@angular/compiler": "^16.1.0",
    "@angular/core": "^16.1.0",
    "@angular/forms": "^16.1.0",
    "@angular/platform-browser": "^16.1.0",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular/router": "^16.1.0",
    "@auth0/auth0-angular": "^2.1.0",
    "@feathersjs/adapter-commons": "^5.0.8",
    "@feathersjs/authentication": "^5.0.8",
    "@feathersjs/authentication-client": "^5.0.8",
    "@feathersjs/configuration": "^5.0.8",
    "@feathersjs/errors": "^5.0.8",
    "@feathersjs/feathers": "^5.0.8",
    "@feathersjs/knex": "^5.0.8",
    "@feathersjs/koa": "^5.0.8",
    "@feathersjs/schema": "^5.0.8",
    "@feathersjs/socketio": "^5.0.8",
    "@feathersjs/transport-commons": "^5.0.8",
    "@feathersjs/typebox": "^5.0.8",
    "@prisma/client": "^5.3.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.3.1",
    "knex": "^2.5.1",
    "mysql": "^2.18.1",
    "prisma": "^5.3.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "winston": "^3.10.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.0",
    "@angular/cli": "~16.1.0",
    "@angular/compiler-cli": "^16.1.0",
    "@feathersjs/cli": "^5.0.8",
    "@feathersjs/rest-client": "^5.0.8",
    "@ngx-env/builder": "^16.1.2",
    "@types/jasmine": "~4.3.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.2",
    "axios": "^1.4.0",
    "cross-env": "^7.0.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.3"
  }
}
