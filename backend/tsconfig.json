{
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./lib",
      "rootDir": "./src",
      "declaration": true,
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "skipLibCheck": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "test"
    ]
  }
